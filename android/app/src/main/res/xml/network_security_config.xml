<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust user-added CA certificates for debugging -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Allow self-signed certificates for specific domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">82.194.215.7</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
